let
    // Load the table
    Source = Excel.CurrentWorkbook(){[Name="Table1"]}[Content],

    // Change column types
    #"Changed Type" = Table.TransformColumnTypes(
        Source,
        {
            {"Person Name & ID No", type text}, {"January Minimum", Int64.Type}, {"January Maximum", Int64.Type},
            {"Person Name & ID No2", type text}, {"February Minimum", Int64.Type}, {"February Maximum", Int64.Type},
            {"Person Name & ID No4", type text}, {"March Minimum", Int64.Type}, {"March Maximum", Int64.Type},
            {"Person Name & ID No6", type text}, {"April Minimum", Int64.Type}, {"April Maximum", Int64.Type},
            {"Person Name & ID No.", type text}, {"May Minimum", Int64.Type}, {"May Maximum", Int64.Type},
            {"Person Name & ID No.9", type text}, {"June Minimum", Int64.Type}, {"June Maximum", Int64.Type},
            {"Person Name & ID No.11", type text}, {"July Minimum", Int64.Type}, {"July Maximum", Int64.Type},
            {"Person Name & ID No.13", type text}, {"August Minimum", Int64.Type}, {"August Maximum", Int64.Type},
            {"Person Name & ID No.15", type text}, {"October Minimum", Int64.Type}, {"October Maximum", Int64.Type},
            {"Person Name & ID No.17", type text}, {"November Minimum", Int64.Type}, {"November Maximum", Int64.Type}
        }
    ),

    // Unpivot all the Person Name columns into one column
    #"Unpivoted Names" = Table.UnpivotOtherColumns(
        #"Changed Type",
        {
            "January Minimum", "January Maximum", "February Minimum", "February Maximum",
            "March Minimum", "March Maximum", "April Minimum", "April Maximum",
            "May Minimum", "May Maximum", "June Minimum", "June Maximum",
            "July Minimum", "July Maximum", "August Minimum", "August Maximum",
            "October Minimum", "October Maximum", "November Minimum", "November Maximum"
        },
        "Attribute",
        "Person Name & ID"
    ),

    // Optional: remove the Attribute column if you don't need it
    #"Removed Attribute Column" = Table.RemoveColumns(#"Unpivoted Names", {"Attribute"})
in
    #"Removed Attribute Column"

