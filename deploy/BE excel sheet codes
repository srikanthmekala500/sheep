let
    Source = Excel.CurrentWorkbook(){[Name="Table4"]}[Content],
    #"Changed Type" = Table.TransformColumnTypes(
        Source,
        {
            {"Person Name & ID No", type text}, 
            {"Person Name & ID No2", type text},
            {"Person Name & ID No4", type text},
            {"February Minimum", Int64.Type}, 
            {"February Maximum", Int64.Type},
            {"March Minimum", Int64.Type}, 
            {"March Maximum", Int64.Type}, 
            {"April Minimum", Int64.Type}, 
            {"April Maximum", Int64.Type}
        }
    ),
    
    // Unpivot the name columns into rows
    #"Unpivoted Names" = Table.UnpivotOtherColumns(
        #"Changed Type",
        {"February Minimum", "February Maximum", "March Minimum", "March Maximum", "April Minimum", "April Maximum"},
        "Attribute",
        "Person Name & ID"
    ),
    
    // Optional: remove the Attribute column if not needed
    #"Removed Attribute Column" = Table.RemoveColumns(#"Unpivoted Names", {"Attribute"})
in
    #"Removed Attribute Column"

