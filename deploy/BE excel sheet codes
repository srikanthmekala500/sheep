Sub Separate_Category_Final()

    Dim wsSrc As Worksheet
    Dim wsA As Worksheet, wsB As Worksheet, wsG As Worksheet
    Dim lastRow As Long, i As Long
    Dim aRow As Long, bRow As Long, gRow As Long
    Dim cat As String

    Set wsSrc = ActiveSheet

    Application.DisplayAlerts = False
    On Error Resume Next
    Sheets("Category_A").Delete
    Sheets("Category_B").Delete
    Sheets("Category_Gown").Delete
    On Error GoTo 0
    Application.DisplayAlerts = True

    Set wsA = Sheets.Add: wsA.Name = "Category_A"
    Set wsB = Sheets.Add: wsB.Name = "Category_B"
    Set wsG = Sheets.Add: wsG.Name = "Category_Gown"

    'Headers
    wsA.Range("A1:G1").Value = Array("DATE", "NAME", "EMPLOYEE ID", "CATEGORY", "RHG", "LHG", "SHEET NUMBER")
    wsB.Range("A1:G1").Value = Array("DATE", "NAME", "EMPLOYEE ID", "CATEGORY", "RHG", "LHG", "SHEET NUMBER")
    wsG.Range("A1:K1").Value = Array("DATE", "NAME", "EMPLOYEE ID", "CATEGORY", "LHG", "FHD", "CHT", "RFH", "LFH", "GLE", "SHEET NUMBER")

    aRow = 2: bRow = 2: gRow = 2
    lastRow = wsSrc.Cells(wsSrc.Rows.Count, "A").End(xlUp).Row

    For i = 2 To lastRow
        cat = Trim(wsSrc.Cells(i, "D").Value)

        'Category_A â†’ A + FD
        If cat = "A" Or cat = "FD" Then
            wsA.Cells(aRow, 1).Resize(1, 4).Value = wsSrc.Cells(i, 1).Resize(1, 4).Value
            wsA.Cells(aRow, 5).Value = wsSrc.Cells(i, "E").Value 'RHG
            wsA.Cells(aRow, 6).Value = wsSrc.Cells(i, "F").Value 'LHG
            wsA.Cells(aRow, 7).Value = wsSrc.Cells(i, "L").Value 'Sheet No
            aRow = aRow + 1
        End If

        'Category_B â†’ Only B
        If cat = "B" Then
            wsB.Cells(bRow, 1).Resize(1, 4).Value = wsSrc.Cells(i, 1).Resize(1, 4).Value
            wsB.Cells(bRow, 5).Value = wsSrc.Cells(i, "E").Value 'RHG
            wsB.Cells(bRow, 6).Value = wsSrc.Cells(i, "F").Value 'LHG
            wsB.Cells(bRow, 7).Value = wsSrc.Cells(i, "L").Value 'Sheet No
            bRow = bRow + 1
        End If

        'Category_Gown â†’ A + B (FD excluded)
        If cat = "A" Or cat = "B" Then
            wsG.Cells(gRow, 1).Resize(1, 4).Value = wsSrc.Cells(i, 1).Resize(1, 4).Value
            wsG.Cells(gRow, 5).Value = wsSrc.Cells(i, "F").Value 'LHG
            wsG.Cells(gRow, 6).Value = wsSrc.Cells(i, "G").Value 'FHD
            wsG.Cells(gRow, 7).Value = wsSrc.Cells(i, "H").Value 'CHT
            wsG.Cells(gRow, 8).Value = wsSrc.Cells(i, "I").Value 'RFH
            wsG.Cells(gRow, 9).Value = wsSrc.Cells(i, "J").Value 'LFH
            wsG.Cells(gRow, 10).Value = wsSrc.Cells(i, "K").Value 'GLE
            wsG.Cells(gRow, 11).Value = wsSrc.Cells(i, "L").Value 'Sheet No
            gRow = gRow + 1
        End If

    Next i

    MsgBox "All sheets created with full details successfully!", vbInformation

End Sub


